---
import GithubIcon from "../atoms/icons/GithubIcon.astro";
import UrlIcon from "../atoms/icons/UrlIcon.astro";

interface Props {
  name: string;
  size?: string;
  url?: string;
}

const { name, size, url } = Astro.props;

const IconComponents = {
  GitHub: GithubIcon,
  Url: UrlIcon,
};

const SelectedIcon = IconComponents[name];
---

{
  SelectedIcon ? (
    <div class="flex flex-row gap-4 items-center justify-center">
      <SelectedIcon class={size} href={url} />
    </div>
  ) : (
    <span>Icon not found</span>
  )
}
