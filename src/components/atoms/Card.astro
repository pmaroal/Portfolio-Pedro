---
import { Image } from "astro:assets";
interface Props {
  href?: string;
  alt: string;
  image: string | null;
  title: string;
}

const { href, image, title, alt } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class="flex flex-col items-center w-fit max-w-[300px] border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 transform transition-transform duration-200 ease-in-out hover:scale-105 dark:hover:bg-gray-700"
>
  {
    image ? (
      <img class="object-cover w-full rounded-lg" src={image} alt={alt} />
    ) : (
      <div class="object-cover w-[298px] h-[142px] rounded-lg bg-gray-300 dark:bg-gray-700 " />
    )
  }

  <div class="flex flex-col justify-between p-2 lg:p-4 leading-normal">
    <h5
      class="mb-2 text-xl lg:text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
    >
      {title}
    </h5>
  </div>
</a>

<script></script>
