<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Agrega el evento de scroll
    window.addEventListener("scroll", () => {
      const scrollPosition = window.scrollY; // Obtiene la cantidad de desplazamiento vertical

      const header = document.querySelector("header"); // Selecciona el header

      if (header) {
        // Verifica que el header no sea null
        if (scrollPosition > 0) {
          // El usuario ha comenzado a hacer scroll
          header.classList.add("bg-black/80", "shadow-lg"); // A침ade clases para el scroll
          header.classList.remove("bg-transparent"); // Remueve la clase original
          // El usuario ha comenzado a hacer scroll
        } else {
          // El usuario est치 en la parte superior de la p치gina
          header.classList.remove("bg-black/80", "shadow-lg"); // Remueve clases para el scroll
          header.classList.add("bg-transparent"); // A침ade la clase original
        }
      }
    });
  });
</script>

